<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blancoCanino"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FiltrosActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/s_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/e_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_flecha" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Filtros"
        android:textColor="@color/morado2BCanino"
        android:textColorHint="@color/blancoCanino"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="@id/e_guideline"
        app:layout_constraintStart_toStartOf="@id/s_guideline"
        app:layout_constraintTop_toBottomOf="@+id/guideline1" />


    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/guideline3"
        app:layout_constraintEnd_toEndOf="@id/e_guideline"
        app:layout_constraintStart_toStartOf="@id/s_guideline"
        app:layout_constraintTop_toBottomOf="@+id/guideline2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="@id/e_guideline"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/guideline2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Ordenar por"
                            android:textColor="@color/morado2BCanino"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            >

                            <Button
                                android:id="@+id/button1"
                                android:layout_marginEnd="2dp"
                                android:layout_width="108dp"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Precio Bajo-Alto"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/button2"
                                android:layout_marginEnd="2dp"
                                android:layout_width="108dp"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Precio Alto-Bajo"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/button3"
                                android:layout_marginEnd="2dp"
                                android:layout_width="108dp"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Popularidad"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="@id/e_guideline"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/guideline2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view3"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="@id/e_guideline"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/guideline2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Mascota"
                            android:textColor="@color/morado2BCanino"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            >

                            <Button
                                android:id="@+id/button4"
                                android:layout_marginEnd="2dp"
                                android:layout_width="108dp"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Perro"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/button5"
                                android:layout_marginEnd="2dp"
                                android:layout_width="108dp"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Gato"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view4"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="center"
                app:cardCornerRadius="2dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="@id/e_guideline"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/guideline2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Categoria"
                            android:textColor="@color/morado2BCanino"
                            android:textSize="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            >

                            <Button
                                android:id="@+id/button6"
                                android:layout_marginEnd="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Juguetes"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/button7"
                                android:layout_marginEnd="2dp"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Accesorios"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />

                            <Button
                                android:id="@+id/button8"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:background="@drawable/mybutton"
                                android:fontFamily="sans-serif-medium"
                                android:text="Alimentos"
                                android:textColor="@color/blancoCanino"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                tools:ignore="TouchTargetSizeCheck" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/button15"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:background="@drawable/mybutton"
        android:fontFamily="sans-serif-medium"
        android:text="Continuar"
        android:textColor="@color/blancoCanino"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/e_guideline"
        app:layout_constraintStart_toStartOf="@id/s_guideline"
        app:layout_constraintTop_toBottomOf="@+id/guideline3" />

</androidx.constraintlayout.widget.ConstraintLayout>