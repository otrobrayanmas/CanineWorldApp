<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/blancoCanino"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DescripcionArticuloActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/s_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/e_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.90" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toTopOf="@+id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_flecha" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="@id/e_guideline"
        app:layout_constraintStart_toStartOf="@id/s_guideline"
        app:layout_constraintTop_toBottomOf="@+id/guideline1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="216dp"
                android:background="@color/morado9CCanino"
                app:layout_constraintEnd_toStartOf="@+id/e_guideline"
                app:layout_constraintStart_toStartOf="@+id/s_guideline"
                app:layout_constraintTop_toTopOf="@+id/guideline1"
                app:srcCompat="@drawable/camagato"
                android:scaleType="centerInside"/>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                app:layout_constraintBottom_toTopOf="@+id/textView4"
                app:layout_constraintEnd_toStartOf="@+id/e_guideline"
                app:layout_constraintStart_toStartOf="@+id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/imageView3">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_weight="1"
                    android:text="Cama gato"
                    android:textColor="@color/morado40Canino"
                    android:textColorHint="@color/blancoCanino"
                    android:textSize="32dp" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blancoCanino"
                    app:srcCompat="@drawable/ic_baseline_favorite_border_24"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="$35.000"
                android:textColor="@color/negroCanino"
                android:textColorHint="@color/blancoCanino"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toStartOf="@+id/e_guideline"
                app:layout_constraintStart_toStartOf="@+id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

                <Button
                    android:id="@+id/imageButton3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="14dp"
                    android:background="@drawable/mybutton"
                    android:text="4.5"
                    android:textColor="@color/blancoCanino"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Excelente"
                    android:textColor="@color/negroCanino"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@+id/imageButton3" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView13"
                android:layout_marginTop="34dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="La cama redonda doble faz para gatos es ideal para que un gato descanse cómodamente, esta elaborada en tela fleece adicionalmente en su base cuenta con un relleno siliconado supersuave."
                android:textColor="@color/negroCanino"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="@id/e_guideline"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/textView16"
                android:layout_marginTop="34dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:text="Seleccionar Tamaño"
                android:textColor="@color/morado40Canino"
                android:textSize="25sp"
                />

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="@id/e_guideline"
                app:layout_constraintStart_toStartOf="@id/s_guideline"
                app:layout_constraintTop_toBottomOf="@id/textView16">

                <Button
                    android:id="@+id/button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/mybutton"
                    android:fontFamily="sans-serif-medium"
                    android:text="S"
                    android:textColor="@color/blancoCanino"
                    android:textSize="21sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/mybutton"
                    android:fontFamily="sans-serif-medium"
                    android:text="M"
                    android:textColor="@color/blancoCanino"
                    android:textSize="21sp"
                    tools:ignore="TouchTargetSizeCheck" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/mybutton"
                    android:fontFamily="sans-serif-medium"
                    android:text="L"
                    android:textColor="@color/blancoCanino"
                    android:textSize="21sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>



        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/e_guideline"
        app:layout_constraintStart_toStartOf="@id/s_guideline"
        app:layout_constraintTop_toBottomOf="@+id/scroll_view">

        <Button
            android:id="@+id/agregarcar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:background="@color/morado40Canino"
            android:fontFamily="sans-serif-medium"
            android:text="Agregar al Carrito"
            android:textAllCaps="false"
            android:textColor="@color/blancoCanino"
            android:textSize="15sp" />

        <Button
            android:id="@+id/comprarahora"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/morado40Canino"
            android:fontFamily="sans-serif-medium"
            android:text="Comprar Ahora"
            android:textAllCaps="false"
            android:textColor="@color/blancoCanino"
            android:textSize="15sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>